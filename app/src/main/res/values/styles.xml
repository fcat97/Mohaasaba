        <item name="colorAccent">@color/colorBlueGrayAccent</item>
    </style>



    <style name="AppTheme.Dialog.Activity" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="colorPrimary">?attr/colorPrimary</item>
    </style>
    <style name="AppTheme.ToolbarOverlay" parent="AppTheme.AppBarOverlay">
        <item name="colorAccent">@color/colorGreen</item>
        <item name="android:colorControlNormal">@color/colorGreen</item>
    </style>
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/checkbox_drawable</item>
        <item name="android:padding">@dimen/dimen_small</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>
    <style name="AppTheme.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:padding">@dimen/dimen_small</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="textRegular">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="textRegular.bold" parent="textRegular">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="textRegular.italic" parent="textRegular">
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/open_sans_light_italic</item>
    </style>

    <style name="textSmall" parent="textRegular">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="textSmall.Italic" parent="textRegular.italic">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textMedium" parent="textRegular">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="textLarge">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="background">@android:color/transparent</item>
    </style>
    <style name="textLarge.Bold">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="textMini" parent="textRegular">
        <item name="android:textSize">10sp</item>
    </style>

</resources>