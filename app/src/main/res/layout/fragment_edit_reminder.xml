<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGray"
    android:padding="@dimen/dimen_mini">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/white"
        android:padding="@dimen/dimen_small">
        <EditText
            android:id="@+id/reminderTitle_EditText_FragmentEditReminder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/textRegular"
            android:inputType="text"
            style="@style/AppTheme.EditText"
            android:layout_marginEnd="@dimen/dimen_large"

            android:hint="@string/notify_message_request"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/textView1_FragmentEditReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_large"

            android:textColor="?attr/colorPrimary"
            android:text="Reminder Time"
            android:textAlignment="center"
            android:textAppearance="@style/textMedium"

            android:layout_below="@id/reminderTitle_EditText_FragmentEditReminder"/>

        <TextView
            android:id="@+id/textView2_FragmentEditReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Choose Time to Notify"
            android:textAlignment="center"
            android:textAppearance="@style/textRegular"

            android:layout_below="@id/textView1_FragmentEditReminder"/>

        <EditText
            android:id="@+id/reminderHour_EditText_FragmentEditReminder"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/textRegular"
            android:inputType="numberSigned"
            style="@style/AppTheme.EditText"
            android:text="0"
            android:textAlignment="viewEnd"


            android:layout_alignTop="@id/textView1_FragmentEditReminder"
            android:layout_toStartOf="@id/hour_TextView_FragmentEditReminder"/>

        <TextView
            android:id="@+id/hour_TextView_FragmentEditReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_mini"

            android:textColor="?attr/colorPrimary"
            android:text="Hr"
            android:textAlignment="center"
            android:textAppearance="@style/textMedium"

            android:layout_alignTop="@id/reminderHour_EditText_FragmentEditReminder"
            android:layout_alignBottom="@id/reminderHour_EditText_FragmentEditReminder"
            android:layout_toStartOf="@id/reminderMinute_EditText_FragmentEditReminder"/>

        <EditText
            android:id="@+id/reminderMinute_EditText_FragmentEditReminder"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/textRegular"
            android:inputType="numberSigned"
            style="@style/AppTheme.EditText"
            android:text="0"
            android:textAlignment="viewEnd"


            android:layout_alignTop="@id/textView1_FragmentEditReminder"
            android:layout_toStartOf="@id/minute_textView_FragmentEditReminder"/>

        <TextView
            android:id="@+id/minute_textView_FragmentEditReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_mini"

            android:textColor="?attr/colorPrimary"
            android:text="M"
            android:textAlignment="center"
            android:textAppearance="@style/textMedium"

            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/reminderMinute_EditText_FragmentEditReminder"
            android:layout_alignBottom="@id/reminderMinute_EditText_FragmentEditReminder"/>

        <TextView
            android:id="@+id/textView3_FragmentEditReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_large"

            android:textColor="?attr/colorPrimary"
            android:text="Remind Before"
            android:textAlignment="center"
            android:textAppearance="@style/textMedium"

            android:layout_below="@id/textView2_FragmentEditReminder"/>

        <TextView
            android:id="@+id/textView4_FragmentEditReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Notification will Show Early"
            android:textAlignment="center"
            android:textAppearance="@style/textRegular"

            android:layout_below="@id/textView3_FragmentEditReminder"/>

        <EditText
            android:id="@+id/remindBefore_EditText_FragmentEditReminder"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/textRegular"
            android:inputType="numberSigned"
            style="@style/AppTheme.EditText"
            android:text="0"
            android:textAlignment="viewEnd"

            android:layout_marginStart="@dimen/dimen_small"

            android:layout_toStartOf="@id/reminderBeforeUnit_TextView_FragmentEditReminder"
            android:layout_alignTop="@id/textView3_FragmentEditReminder"/>

        <TextView
            android:id="@+id/reminderBeforeUnit_TextView_FragmentEditReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/textRegular"
            android:background="@drawable/checkbox_drawable"
            android:padding="@dimen/dimen_small"
            android:layout_marginStart="@dimen/dimen_small"

            android:text="Minutes"
            android:textAlignment="center"


            android:layout_alignTop="@id/textView3_FragmentEditReminder"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/textView5_FragmentEditReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_large"

            android:textColor="?attr/colorPrimary"
            android:text="Repeat Interval"
            android:textAlignment="center"
            android:textAppearance="@style/textMedium"

            android:layout_below="@id/textView4_FragmentEditReminder"/>

        <TextView
            android:id="@+id/textView6_FragmentEditReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Choose Time of Interval"
            android:textAlignment="center"
            android:textAppearance="@style/textRegular"

            android:layout_below="@id/textView5_FragmentEditReminder"/>

        <EditText
            android:id="@+id/reminderInterval_EditText_FragmentEditReminder"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/textRegular"
            android:inputType="numberSigned"
            style="@style/AppTheme.EditText"
            android:text="0"
            android:textAlignment="viewEnd"

            android:layout_marginStart="@dimen/dimen_small"

            android:layout_toStartOf="@id/reminderIntervalUnit_TextView_FragmentEditReminder"
            android:layout_alignTop="@id/textView5_FragmentEditReminder"/>

        <TextView
            android:id="@+id/reminderIntervalUnit_TextView_FragmentEditReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/textRegular"
            android:background="@drawable/checkbox_drawable"
            android:padding="@dimen/dimen_small"
            android:layout_marginStart="@dimen/dimen_small"

            android:text="Minutes"
            android:textAlignment="center"


            android:layout_alignTop="@id/textView5_FragmentEditReminder"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/confirm_button_FragmentEditReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_small"

        android:text="Save"
        android:src="@drawable/ic_check"
        android:tint="@color/white"

        android:layout_alignParentEnd="true"/>

</RelativeLayout>
