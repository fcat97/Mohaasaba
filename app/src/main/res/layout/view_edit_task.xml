<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_small">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="?attr/colorPrimary"
        android:text="Current Progress"
        android:textAlignment="center"
        android:textAppearance="@style/textMedium"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Complete task to increment Progress"
        android:textAlignment="center"
        android:textAppearance="@style/textRegular"

        android:layout_below="@id/textView1"/>

    <TextView
        android:id="@+id/currentProgress_TextView_FragmentTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_small"

        android:text="24"
        android:textAlignment="center"
        android:textAppearance="@style/textMedium"

        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_large"

        android:textColor="?attr/colorPrimary"
        android:text="Maximum Progress"
        android:textAlignment="center"
        android:textAppearance="@style/textMedium"

        android:layout_below="@id/textView2"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Define Maximum Progress of Task"
        android:textAlignment="center"
        android:textAppearance="@style/textRegular"

        android:layout_below="@id/textView3"/>

    <EditText
        android:id="@+id/maxProgress_EditText_FragmentTodo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/textRegular"
        android:inputType="numberSigned"
        style="@style/AppTheme.EditText"

        android:layout_alignTop="@id/textView3"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_large"

        android:textColor="?attr/colorPrimary"
        android:text="Progress Steps"
        android:textAlignment="center"
        android:textAppearance="@style/textMedium"

        android:layout_below="@id/textView4"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Steps to Complete a Task"
        android:textAlignment="center"
        android:textAppearance="@style/textRegular"

        android:layout_below="@id/textView5"/>

    <EditText
        android:id="@+id/progressStep_EditText_FragmentTodo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/textRegular"
        android:inputType="numberSigned"
        style="@style/AppTheme.EditText"

        android:layout_alignTop="@id/textView5"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_large"

        android:textColor="?attr/colorPrimary"
        android:text="Progress Type"
        android:textAlignment="center"
        android:textAppearance="@style/textMedium"

        android:layout_below="@id/textView6"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Change the Type of Task"
        android:textAlignment="center"
        android:textAppearance="@style/textRegular"

        android:layout_below="@id/textView7"/>

    <EditText
        android:id="@+id/taskType_EditText_FragmentTodo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/textRegular"
        android:inputType="text"
        style="@style/AppTheme.EditText"

        android:text="Mubah"
        android:textAlignment="center"

        android:layout_alignTop="@id/textView7"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>