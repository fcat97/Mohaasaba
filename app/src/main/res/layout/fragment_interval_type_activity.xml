<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_small">
        <TextView
            android:id="@+id/textView1_FragmentInterval_TypeActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_small"
            android:text="Custom Dates with Custom Interval"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/textSmall"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/textView2_FragmentInterval_TypeActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Days"
            android:textAppearance="@style/textRegular"
            android:layout_margin="@dimen/dimen_large"
            android:layout_below="@id/textView1_FragmentInterval_TypeActivity"/>
        <EditText
            android:id="@+id/activeDays_EditText_TypeActivity"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_large"
            android:textAppearance="@style/textRegular"
            android:inputType="numberSigned"
            style="@style/AppTheme.EditText"
            android:layout_alignBaseline="@id/textView2_FragmentInterval_TypeActivity"
            android:layout_toEndOf="@id/textView2_FragmentInterval_TypeActivity"/>

        <TextView
            android:id="@+id/textView3_FragmentInterval_TypeActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inactive Days"
            android:textAppearance="@style/textRegular"
            android:layout_margin="@dimen/dimen_large"
            android:layout_below="@id/textView2_FragmentInterval_TypeActivity"/>

        <EditText
            android:id="@+id/inactiveDays_EditText_TypeActivity"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/textRegular"
            android:inputType="numberSigned"
            style="@style/AppTheme.EditText"
            android:layout_alignBaseline="@id/textView3_FragmentInterval_TypeActivity"
            android:layout_alignStart="@id/activeDays_EditText_TypeActivity"/>
        <TextView
            android:id="@+id/textView4_FragmentInterval_TypeActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continuous Days"
            android:textAppearance="@style/textMedium"
            android:layout_marginTop="@dimen/dimen_large"
            android:layout_marginStart="@dimen/dimen_large"
            android:layout_marginBottom="@dimen/dimen_small"
            android:textColor="@color/colorGreen"
            android:layout_alignParentStart="true"
            android:layout_below="@id/textView3_FragmentInterval_TypeActivity"/>
        <TextView
            android:id="@+id/textView5_FragmentInterval_TypeActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Days are Continuous"
            android:textAppearance="@style/textSmall"
            android:layout_alignStart="@id/textView4_FragmentInterval_TypeActivity"
            android:layout_below="@id/textView4_FragmentInterval_TypeActivity"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sw_continuous_FragmentInterval_TypeActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_small"

            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/textView4_FragmentInterval_TypeActivity"
            android:layout_alignBottom="@id/textView5_FragmentInterval_TypeActivity"/>

    </RelativeLayout>
</ScrollView>