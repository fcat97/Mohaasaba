<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:elevation="@dimen/dimen_mini"
    android:layout_marginBottom="@dimen/dimen_small"
    android:layout_marginStart="@dimen/dimen_small"
    android:layout_marginEnd="@dimen/dimen_small"
    android:background="@drawable/checkbox_drawable">
    <TextView
        android:id="@+id/label_TransactionPage_TextView_HisaabActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/textSmall"
        android:layout_margin="@dimen/dimen_small"
        android:lines="1"
        android:ellipsize="end"
        android:text="@string/all_transactions"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_TransactionPage_TextView_HisaabActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        android:paddingStart="@dimen/dimen_small"
        android:paddingEnd="@dimen/dimen_small"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_transaction"/>
    <RelativeLayout
        android:id="@+id/____asda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/total_TextView_HisaabActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/textSmall"
            android:text="@string/total"
            android:padding="@dimen/dimen_small"
            android:layout_marginEnd="@dimen/dimen_small"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/totalAmount_TransactionPage_TextView_HisaabActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/textSmall"
            android:textAlignment="viewEnd"
            android:text="@string/_50_65"
            android:padding="@dimen/dimen_small"
            android:layout_toEndOf="@id/total_TextView_HisaabActivity"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
