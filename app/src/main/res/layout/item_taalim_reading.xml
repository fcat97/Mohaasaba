<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_margin="@dimen/dimen_small"
    app:cardElevation="@dimen/cardElevation"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/button_ripple_white">
        <ImageView
            android:id="@+id/bookIcon_ImageView_ItemTaalim"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="12dp"
            android:layout_marginTop="@dimen/dimen_small"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_talim"
            app:tint="?attr/colorPrimary" />
        <TextView
            android:id="@+id/title_TextView_ItemTalim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taalim"
            android:padding="2dp"
            android:ellipsize="middle"
            android:maxLines="3"
            android:textAppearance="@style/textMedium"
            android:layout_margin="@dimen/dimen_small"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/bookIcon_ImageView_ItemTaalim"/>
        <TextView
            android:id="@+id/author_TextView_ItemTalim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taalim"
            android:padding="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/textSmall.Italic"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/title_TextView_ItemTalim"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
