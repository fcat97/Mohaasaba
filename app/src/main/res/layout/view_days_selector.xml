<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="2dp">

    <LinearLayout
        android:id="@+id/linearLayout1_DateSelectorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_mini"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/saturdayLabel_DaysSelectorView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="S"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textAppearance="@style/textMini"
            android:background="@drawable/button_circle_ripple" />
        <TextView
            android:id="@+id/sundayLabel_DaysSelectorView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="S"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textAppearance="@style/textMini"
            android:background="@drawable/button_circle_ripple"/>
        <TextView
            android:id="@+id/mondayLabel_DaysSelectorView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="M"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textAppearance="@style/textMini"
            android:background="@drawable/button_circle_ripple"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2_DateSelectorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_toEndOf="@id/linearLayout1_DateSelectorView">
        <TextView
            android:id="@+id/tuesdayLabel_DaysSelectorView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="T"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textAppearance="@style/textMini"
            android:background="@drawable/button_circle_ripple"/>
        <TextView
            android:id="@+id/wednesdayLabel_DaysSelectorView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="W"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textAppearance="@style/textMini"
            android:background="@drawable/button_circle_ripple"/>
        <TextView
            android:id="@+id/thursdayLabel_DaysSelectorView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="T"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textAppearance="@style/textMini"
            android:background="@drawable/button_circle_ripple"/>
        <TextView
            android:id="@+id/fridayLabel_DaysSelectorView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="F"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textAppearance="@style/textMini"
            android:background="@drawable/button_circle_ripple"/>
    </LinearLayout>
    <TextView
        android:id="@+id/timeSpan_TextView_DateSelectorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00 AM - 11:59PM"
        android:textAppearance="@style/textMedium"
        android:layout_below="@id/linearLayout2_DateSelectorView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_small"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_ripple_gray"
        android:layout_below="@id/timeSpan_TextView_DateSelectorView">
        <ImageView
            android:id="@+id/bellIcon_ImageView_DateSelectorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bell"
            app:tint="@color/colorBlueDark"
            android:layout_margin="@dimen/dimen_small"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/notifyTime_TextView_DateSelectorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/demo_time"
            android:layout_centerVertical="true"
            android:textAppearance="@style/textLarge.Bold"
            android:layout_toEndOf="@id/bellIcon_ImageView_DateSelectorView"/>
        <ImageView
            android:id="@+id/cancelButton_ImageView_DateSelectorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_circle_ripple"
            android:src="@drawable/ic_cancel"
            app:tint="@color/colorRed"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dimen_small"
            android:layout_toEndOf="@id/notifyTime_TextView_DateSelectorView"/>
    </RelativeLayout>
</RelativeLayout>