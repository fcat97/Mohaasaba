<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_mini"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/saturdayLabel_DaysSelectorView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="S"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textAppearance="@style/textMini"
            android:background="@drawable/button_circle_ripple" />
        <TextView
            android:id="@+id/sundayLabel_DaysSelectorView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="S"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textAppearance="@style/textMini"
            android:background="@drawable/button_circle_ripple"/>
        <TextView
            android:id="@+id/mondayLabel_DaysSelectorView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="M"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textAppearance="@style/textMini"
            android:background="@drawable/button_circle_ripple"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/tuesdayLabel_DaysSelectorView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="T"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textAppearance="@style/textMini"
            android:background="@drawable/button_circle_ripple"/>
        <TextView
            android:id="@+id/wednesdayLabel_DaysSelectorView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="W"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textAppearance="@style/textMini"
            android:background="@drawable/button_circle_ripple"/>
        <TextView
            android:id="@+id/thursdayLabel_DaysSelectorView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="T"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textAppearance="@style/textMini"
            android:background="@drawable/button_circle_ripple"/>
        <TextView
            android:id="@+id/fridayLabel_DaysSelectorView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="F"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textAppearance="@style/textMini"
            android:background="@drawable/button_circle_ripple"/>
    </LinearLayout>

</LinearLayout>