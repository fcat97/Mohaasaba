<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/maxProgress_EditText_ViewTargetEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/dimen_small"
        android:hint="Max Progress"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/dimen_mini"
        android:inputType="numberSigned"
        android:textAppearance="@style/textRegular"
        android:background="@drawable/checkbox_drawable"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/progressUnit_TextView_ViewTargetEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/dimen_small"
        android:hint="Progress Unit"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/dimen_mini"
        android:inputType="text"
        android:textAppearance="@style/textRegular"
        android:background="@drawable/checkbox_drawable"
        android:layout_below="@id/maxProgress_EditText_ViewTargetEditor"
        />
    <EditText
        android:id="@+id/step_TextView_ViewTargetEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_margin="@dimen/dimen_small"
        android:hint="Progress Step"
        android:padding="@dimen/dimen_mini"
        android:inputType="numberSigned"
        android:textAppearance="@style/textRegular"
        android:background="@drawable/checkbox_drawable"
        android:layout_below="@id/progressUnit_TextView_ViewTargetEditor"/>
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/todoProgress_Switch_ViewTargetEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Progress based on Todo"
        android:textAppearance="@style/textMini"
        android:layout_below="@id/step_TextView_ViewTargetEditor"/>
</RelativeLayout>