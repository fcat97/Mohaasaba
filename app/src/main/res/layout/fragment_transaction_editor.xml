<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dimen_large"
    android:layout_gravity="bottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_small"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/amount_FrameLayout_FragmentTransactionEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_small"/>

        <EditText
            android:id="@+id/note_EditText_FragmentTransactionEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGray"
            android:padding="@dimen/dimen_small"
            android:layout_margin="@dimen/dimen_small"
            android:hint="@string/note_text"
            android:inputType="text"
            android:lines="4"
            android:gravity="start"
            android:textAlignment="textStart"
            android:textAppearance="@style/textMedium"/>
        <EditText
            android:id="@+id/tag_EditText_FragmentTransactionEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGray"
            android:padding="@dimen/dimen_small"
            android:layout_margin="@dimen/dimen_small"
            android:hint="@string/dummy_tags"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textAppearance="@style/textMedium"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/__tv1_FragmentTransactionEditor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Page"
                android:padding="@dimen/dimen_small"
                android:layout_margin="@dimen/dimen_small"
                android:layout_alignBaseline="@id/page_TextView_FragmentTransactionEditor"
                android:textAppearance="@style/textMedium"/>
            <TextView
                android:id="@+id/page_TextView_FragmentTransactionEditor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_mini"
                android:textAppearance="@style/textMedium"
                android:text="Untitled"
                android:lines="1"
                android:textAlignment="center"
                android:layout_toEndOf="@id/__tv1_FragmentTransactionEditor"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button_ripple_gray"/>

            <TextView
                android:id="@+id/__tv2_FragmentTransactionEditor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:padding="@dimen/dimen_small"
                android:layout_margin="@dimen/dimen_small"
                android:layout_alignBaseline="@id/account_TextView_FragmentTransactionEditor"
                android:textAppearance="@style/textMedium"/>
            <TextView
                android:id="@+id/account_TextView_FragmentTransactionEditor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_mini"
                android:layout_marginTop="@dimen/dimen_small"
                android:textAppearance="@style/textMedium"
                android:text="Credit Card"
                android:lines="1"
                android:textAlignment="center"
                android:layout_toEndOf="@id/__tv2_FragmentTransactionEditor"
                android:layout_below="@id/page_TextView_FragmentTransactionEditor"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button_ripple_gray"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/delete_Button_FragmentTransactionEditor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_text"
                android:background="@drawable/button_ripple_transparent"
                android:textColor="@android:color/holo_red_light"
                android:backgroundTint="@color/colorPurple"/>
            <Button
                android:id="@+id/confirm_Button_FragmentTransactionEditor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_text"
                android:background="@drawable/button_ripple_transparent"
                android:textColor="@color/colorGreenAccent"
                android:backgroundTint="@color/colorBlue"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
