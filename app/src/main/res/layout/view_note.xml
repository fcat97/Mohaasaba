<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGray">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/note"
        android:textAppearance="@style/textMedium"
        android:textColor="@android:color/darker_gray"

        android:layout_marginTop="@dimen/dimen_small"
        android:layout_marginStart="@dimen/dimen_extraLarge"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <EditText
        android:id="@+id/note_EditText_viewNote_FragmentOverView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="48dp"
        android:layout_marginStart="@dimen/dimen_large"
        android:layout_marginEnd="@dimen/dimen_large"
        android:layout_marginBottom="@dimen/dimen_large"
        android:hint="@string/write_something_here"
        android:textAppearance="@style/textMedium"
        android:textColor="@android:color/tertiary_text_light"

        android:gravity="start"
        android:textAlignment="gravity"
        android:inputType="textMultiLine" />
</RelativeLayout>