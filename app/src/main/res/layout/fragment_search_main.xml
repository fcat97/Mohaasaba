<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SearchActivity">
    <soup.neumorphism.NeumorphCardView
        android:id="@+id/appbarLayout_SearchActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <EditText
            android:id="@+id/search_EditText_SearchActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_small"
            android:background="@android:color/transparent"
            android:textAppearance="@style/textMedium"
            android:hint="Search"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="@dimen/dimen_mini"
            android:drawableTint="?attr/colorPrimary"
            android:inputType="text"
            android:layout_margin="@dimen/dimen_small"/>
    </soup.neumorphism.NeumorphCardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_SearchActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_recyclerview_main"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_below="@id/appbarLayout_SearchActivity"/>
</RelativeLayout>