<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/RelativeLayout1_ItemSubPlanCount"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="?attr/selectableItemBackground"
    android:layout_alignParentStart="true">
    <TextView
        android:id="@+id/title_TextView_ItemSubPlanCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dummy_text"
        android:textAppearance="@style/textRegular.bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/dimen_small"
        android:layout_marginEnd="@dimen/dimen_small"
        android:layout_marginTop="@dimen/dimen_mini"
        android:layout_marginBottom="@dimen/dimen_mini"
        android:layout_toStartOf="@id/button1_ImageButton_ItemSubPlanCount"
        android:layout_toEndOf="@id/circularProgressView_ItemSubPlanCount"/>
    <TextView
        android:id="@+id/goal_TextView_ItemSubPlanCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/textMini"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/dimen_small"
        android:layout_marginEnd="@dimen/dimen_small"
        android:layout_marginBottom="@dimen/dimen_mini"
        android:layout_below="@id/title_TextView_ItemSubPlanCount"
        android:layout_toStartOf="@id/button1_ImageButton_ItemSubPlanCount"
        android:layout_toEndOf="@id/circularProgressView_ItemSubPlanCount"/>
    <at.grabner.circleprogress.CircleProgressView
        android:id="@+id/circularProgressView_ItemSubPlanCount"
        android:layout_width="48dp"
        android:layout_height="48dp"

        app:cpv_maxValue="15"
        app:cpv_value="0"
        app:cpv_textColor="?attr/colorAccent"
        app:cpv_textMode="Percent"
        app:cpv_autoTextSize="true"
        app:cpv_textScale="0.75"
        app:cpv_unit="%"
        app:cpv_unitColor="@color/colorOrange"
        app:cpv_unitPosition="right_top"
        app:cpv_unitToTextScale="0.85"
        app:cpv_showUnit="true"
        app:cpv_blockCount="15"

        app:cpv_startAngle="300"
        app:cpv_rimWidth="3dp"
        app:cpv_barWidth="9dp"
        app:cpv_barColor="@color/colorOrange"
        app:cpv_innerContourColor="@android:color/transparent"
        app:cpv_outerContourColor="@android:color/transparent"

        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/completed_ImageView_ItemSubPlanCount"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_checkup"
        android:visibility="invisible"

        android:layout_alignStart="@id/circularProgressView_ItemSubPlanCount"
        android:layout_alignEnd="@id/circularProgressView_ItemSubPlanCount"
        android:layout_alignTop="@id/circularProgressView_ItemSubPlanCount"
        android:layout_alignBottom="@id/circularProgressView_ItemSubPlanCount"
        android:layout_centerVertical="true"/>
    <ImageButton
        android:id="@+id/button1_ImageButton_ItemSubPlanCount"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="@dimen/dimen_mini"
        android:src="@drawable/ic_stop"
        android:background="@drawable/button_circle_ripple"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/button2_ImageButton_ItemSubPlanCount"/>
    <ImageButton
        android:id="@+id/button2_ImageButton_ItemSubPlanCount"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_play"
        android:background="@drawable/button_circle_ripple"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
