<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/label_EditText_FragmentTrxPgEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title_request_text"
        android:inputType="text"
        android:layout_margin="@dimen/dimen_small"
        android:textAppearance="@style/textMedium"
        style="@style/AppTheme.EditText"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_FragmentTrxPgEdit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/item_transaction"
        android:padding="@dimen/dimen_small"
        android:background="@color/colorGray"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_above="@id/bottom_RelativeLayout_FragmentTrxPgEdit"
        android:layout_below="@id/label_EditText_FragmentTrxPgEdit"/>

    <RelativeLayout
        android:id="@+id/bottom_RelativeLayout_FragmentTrxPgEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_new"
            style="@style/AppTheme.Button"
            android:layout_marginEnd="@dimen/dimen_small"
            android:drawableLeft="@drawable/ic_add"

            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/total_TextView_FragmentTrxPgEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total"
            android:textAppearance="@style/textLarge"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dimen_small"/>
        <TextView
            android:id="@+id/totalAmount_TextView_FragmentTrxPgEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_50_65"
            android:textAppearance="@style/textLarge"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/total_TextView_FragmentTrxPgEdit"
            android:layout_marginStart="@dimen/dimen_small"/>
    </RelativeLayout>
</RelativeLayout>