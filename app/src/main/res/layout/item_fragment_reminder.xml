<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/cardElevation"
    android:layout_marginTop="2dp"
    android:layout_marginStart="@dimen/dimen_mini"
    android:layout_marginEnd="@dimen/dimen_mini"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/itemSL_TextView_itemFragmentReminder"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="@dimen/dimen_mini"

            android:text="1"
            android:textAlignment="center"
            android:background="@drawable/button_circle"
            android:textAppearance="@style/textMedium"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/message_TextView_itemFragmentReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_text"
            android:textAppearance="@style/textRegular.bold"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/dimen_small"
            android:layout_marginEnd="@dimen/dimen_small"
            android:layout_marginTop="@dimen/dimen_mini"
            android:layout_marginBottom="@dimen/dimen_mini"

            android:layout_toEndOf="@id/itemSL_TextView_itemFragmentReminder"
            android:layout_toStartOf="@id/deleteButton_ImageButton__itemFragmentReminder" />
        <TextView
            android:id="@+id/at_TextView_itemFragmentReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Notify at"
            android:layout_marginEnd="@dimen/dimen_small"
            android:layout_marginBottom="@dimen/dimen_small"
            android:textAppearance="@style/textRegular.italic"
            android:layout_alignStart="@id/message_TextView_itemFragmentReminder"
            android:layout_below="@id/message_TextView_itemFragmentReminder"/>
        <TextView
            android:id="@+id/time_TextView_itemFragmentReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/demo_time"
            android:textAppearance="@style/textRegular.italic"
            android:layout_alignBaseline="@id/at_TextView_itemFragmentReminder"
            android:layout_toEndOf="@id/at_TextView_itemFragmentReminder"/>
        <ImageButton
            android:id="@+id/deleteButton_ImageButton__itemFragmentReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dimen_mini"
            android:backgroundTint="@android:color/holo_red_light"
            android:background="@drawable/button_circle_ripple"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
