<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_0_FragmentBookDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_mini"
    android:layout_marginBottom="@dimen/dimen_mini"
    android:orientation="vertical"
    android:background="@drawable/checkbox_drawable">
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/progress_chart_ViewProgressHistory"
        android:layout_width="match_parent"
        android:layout_height="140dp"/>
    <RelativeLayout
        android:id="@+id/progressInput_RelativeLayout_ViewProgressHistory"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        android:visibility="gone"
        android:layout_gravity="center_horizontal">
        <EditText
            android:id="@+id/progressInput_EditText_ViewProgressHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textAppearance="@style/textMedium"
            android:inputType="numberSigned"
            android:textAlignment="viewStart"
            android:padding="@dimen/dimen_small"/>
        <ImageButton
            android:id="@+id/checkButton_ImageButton_ViewProgressHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"
            android:background="@drawable/button_circle_ripple"
            android:padding="@dimen/dimen_small"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/dailyTarget_RelativeLayout_ViewProgressHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_ripple_gray"
            android:padding="@dimen/dimen_small"
            android:layout_margin="@dimen/dimen_mini">
            <TextView
                android:id="@+id/text_daily_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Target"
                android:textAppearance="@style/textSmall"
                android:textColor="?attr/colorPrimary"/>
            <TextView
                android:id="@+id/dailyTarget_TextView_ViewProgressHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/textMedium"
                android:layout_below="@id/text_daily_target"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorGray"
            android:padding="@dimen/dimen_small"
            android:layout_margin="@dimen/dimen_mini">
            <TextView
                android:id="@+id/text_target_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:textAppearance="@style/textSmall"
                android:textColor="?attr/colorPrimary"/>
            <TextView
                android:id="@+id/targetComplete_TextView_ViewProgressHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/textMedium"
                android:layout_below="@id/text_target_complete"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorGray"
            android:padding="@dimen/dimen_small"
            android:layout_margin="@dimen/dimen_mini">
            <TextView
                android:id="@+id/text_total_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Completed"
                android:textAppearance="@style/textSmall"
                android:textColor="?attr/colorPrimary"/>
            <TextView
                android:id="@+id/totalCompleted_TextView_ViewProgressHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="110"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/textMedium"
                android:layout_below="@id/text_total_complete"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/progress_Button_ViewProgressHistory"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Progress"
            android:drawableLeft="@drawable/ic_step"
            android:drawableTint="@color/white"
            style="@style/AppTheme.Button"
            android:layout_centerHorizontal="true"/>
        <ImageButton
            android:id="@+id/undoButton_ImageButton_ViewProgressHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_small"
            android:src="@drawable/ic_step"
            android:background="@drawable/button_circle_ripple"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/progress_Button_ViewProgressHistory"
            android:rotationY="180"/>
        <ImageButton
            android:id="@+id/allDone_ImageButton_ViewProgressHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_small"
            android:src="@drawable/ic_done_all"
            android:background="@drawable/button_circle_ripple"
            android:layout_centerVertical="true"
            android:tint="?attr/colorAccent"
            android:layout_toEndOf="@id/progress_Button_ViewProgressHistory" />
    </RelativeLayout>
</LinearLayout>