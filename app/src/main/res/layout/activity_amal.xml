<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AmalActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarLayout_AmalActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_AmalActivity"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="?attr/colorAccent">
            <EditText
                android:id="@+id/title_EditText_AmalActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textAppearance="@style/textMedium"
                android:textColor="?attr/colorPrimaryDark"
                android:inputType="text"
                android:hint="@string/title_request_text"
                android:autofillHints="@string/title_request_text"
                android:textColorHint="@android:color/darker_gray"
                android:ellipsize="end"
                android:maxLines="1" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_AmalActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_amal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_below="@id/appbarLayout_AmalActivity"/>
</RelativeLayout>