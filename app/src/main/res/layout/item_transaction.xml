<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dimen_small"
    android:paddingEnd="@dimen/dimen_small"
    android:paddingBottom="@dimen/dimen_mini"
    android:background="@color/colorGray">
    <TextView
        android:id="@+id/text_TransactionItem_TextView_HisaabActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ice_cream"
        android:textAppearance="@style/textSmall"
        android:layout_alignParentStart="true"
        android:lines="1"
        android:ellipsize="end"
        android:layout_toStartOf="@id/amount_TransactionItem_TextView_HisaabActivity"/>
    <TextView
        android:id="@+id/amount_TransactionItem_TextView_HisaabActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_23_00"
        android:textAppearance="@style/textSmall"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>